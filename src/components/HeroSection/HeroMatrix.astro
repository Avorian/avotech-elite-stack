---
const {
  title = "INITIATE AVO LINK",
  subtitle = "Elevate Your Digital Presence",
  showButton = true,
  theme
} = Astro.props;

const isMatrix = theme === 'matrix';
---

{isMatrix && (
  <section class="hero-matrix hero-section py-16 sm:py-24 md:py-32 text-center text-green-400">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="matrix-block matrix-grid p-6 sm:p-10 rounded-lg text-green-300 font-mono shadow-lg relative">

        <p class="text-xs sm:text-sm tracking-widest uppercase text-green-500 mb-4 flicker z-10">
          [SYSTEM MESSAGE]
        </p>

        <h1
          class="glitch-text font-bold mb-6 text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl leading-tight tracking-tight z-10"
          data-text={title}
        >
          {title}
        </h1>

        <p class="text-base sm:text-lg md:text-xl mb-8 leading-relaxed max-w-3xl mx-auto flicker z-10">
          {subtitle}
        </p>

        {showButton && (
          <a
            href="#features"
            class="hero-cta inline-block px-6 py-3 sm:px-8 sm:py-4 text-sm sm:text-base font-bold rounded transition border border-green-500 text-green-100 hover:text-green-300 hover:shadow-green-500/30 animate-pulse-glow z-10"
          >
            Access Node
          </a>
        )}
      </div>
    </div>
  </section>
)}
