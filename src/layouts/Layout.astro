---
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
import ThemeSafeList from "../components/ThemeSafeList.astro";
import "../styles/global.css";
---

<html lang="en" data-theme="nes">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AvoTech Elite Stack</title>

    <!-- NES theme will load by default unless switched dynamically -->
    <link id="theme-stylesheet" rel="stylesheet" href="/themes/nes.css" />

    <!-- Font Imports -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Press+Start+2P&family=Share+Tech+Mono&family=Rubik:wght@400;700&display=swap"
      rel="stylesheet"
    />

    <!-- Theme Persistence & Meta -->
    <ThemeSafeList />
    <meta name="description" content="AvoTech Elite Stack â€“ a blazing fast, multi-theme portfolio and business tech site." />
    <meta name="theme-color" content="#ff0000" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>

  <body class="text-base-content">
    <NavBar />
    <main class="min-h-screen px-4">
      <slot />
    </main>
    <Footer />

    <!-- Theme Preference Loader -->
    <script>
      const savedTheme = localStorage.getItem("theme") || "nes";
      document.documentElement.setAttribute("data-theme", savedTheme);
    </script>

    <!-- Optional Theme Debug Tag -->
    <div class="theme-debug">ðŸŽ¯ Theme Loaded</div>
  </body>
</html>
