---
import { getThemeClasses } from '../../utils/themeClassMap.js';
const { theme } = Astro.props as { theme: 'matrix' | 'cyberpunk' | 'nes' };

const classes = getThemeClasses(theme, 'hero');
const base = "text-6xl md:text-7xl font-extrabold tracking-tight drop-shadow-lg";
---

<h1 class={`${base} ${classes.text} ${classes.font} ${classes.animationTitle}`}>
	AvoTech
</h1>
