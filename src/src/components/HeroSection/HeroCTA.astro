---
// HeroCTA.astro
const { theme } = Astro.props;

const btnBase = "px-6 py-3 rounded-lg font-semibold transition-transform duration-300";
const btnPrimary = theme === 'cyberpunk'
    ? "bg-pink-500 hover:bg-pink-600 text-black"
    : theme === 'nes'
        ? "bg-white text-black border-2 border-black"
        : "bg-green-400 hover:bg-green-500 text-black";

const btnSecondary = "ml-4 underline text-sm opacity-80 hover:opacity-100";
---

<div class="mt-8 flex justify-center">
	<a href="#contact" class={`${btnBase} ${btnPrimary}`}>Get in Touch</a>
	<a href="#features" class={`${btnSecondary}`}>Learn More</a>
</div>
